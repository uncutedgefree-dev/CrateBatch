{
  "name": "cratebatch",
  "productName": "CrateBatch",
  "main": "electron/main.js",
  "version": "1.0.0",
  "description": "Rekordbox Library Analyzer Desktop App",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "electron-dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.0.0",
    "axios": "^1.6.0",
    "electron-is-dev": "^3.0.0",
    "fast-xml-parser": "^4.3.0",
    "lucide-react": "^0.344.0",
    "p-limit": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.2.0",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.cratebatch.app",
    "productName": "CrateBatch",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.music"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
